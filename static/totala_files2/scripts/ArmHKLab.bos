	Static_Var_1 = !Static_Var_1;
}

Activate()
{
	signal 2;
	start-script RequestState(0);
}

Deactivate()
{
	signal 2;
	set-signal-mask 2;
	set-signal-mask 0;
	start-script RequestState(1);
}

StartBuilding()
{
	dont-cache buildpad;
	dont-cache activator;
}

StopBuilding()
{
	cache buildpad;
	cache activator;
}

QueryBuildInfo(piecenum)
